@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>Class</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Students)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Gender</td>
                <td>@user.Age</td>
                <td>@user.Class</td>
                <td>
                    <a asp-page="./EditStudent" asp-route-id="@user.ID">Edit</a>
                    <a asp-page="./AddStudent">Add</a>
                </td>
            </tr>
        }
    </tbody>
</table>
