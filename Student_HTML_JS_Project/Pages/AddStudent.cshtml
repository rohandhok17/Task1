@page
@model Student_HTML_JS_Project.Pages.AddStudentModel
@section Scripts {

    <script src="~/js/AddPage.js"></script>

}
@section styles {
    <link rel="Stylesheet" href="~/css/Addnew.css" />
}
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Form</title>

</head>
<body>
    <div class="main1">


        <br>
        <form class="frm">
            <h2>Add Student</h2>
            <div id="frt">
                <label for="firstName" class="f1">First Name<span class="required"> *</span></label>
                <input minlength="3" maxlength="18" type="text" id="firstName" onkeypress="return /[a-z ]/i.test(event.key)"
                        placeholder="Please enter First Name">
                <div id="first-name-err" class="errorf"></div>


            </div>

            <div id="lst">
                <label for="lastName" class="l1">Last Name<span class="required"> *</span></label>
                <input minlength="2" maxlength="18" type="text" id="lastName" placeholder="Please enter Last Name" onkeypress="return /[a-z ]/i.test(event.key)">
              <div id="last-name-err" class="errorl"></div>
                

            </div>

            <div id="gnd">
                <label for="gender" class="g1">Gender<span class="required"> *</span></label>
                <select id="gender" name="gender">
                    <option value="" disabled selected style="color: lightgray">Please select Gender</option>
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                    
                </select>
                <div id="gender-err" class="errorg"></div>
            </div>

            <div class="db">
                <div class="db1">
                    <label for="dob" class="d1">Date of Birth<span class="required"> *</span></label>
                    <input type="date" id="dob" name="dob">
                    
                </div>
                <div class="db2">
                    <div id="dob-err" class="errord"></div>
                    
                </div>


                <div class="db1">
                    <label for="age" class="a1">Age<span class="required"> *</span></label>
                    <input type="number" id="age" name="age"><small> years</small>
                    
              </div>
            </div>
            <div class="db2">
                
                <div id="age-err" class="errora"></div>
            </div>

            <div id="cls">
                <label for="class" class="c1">Class</label>
                <input type="text" id="class" name="class" placeholder="Please enter Class">
            </div>

            <div id="ads">
                <label for="address" class="add1">Address</label>
                <textarea id="address" name="address" placeholder="Please enter address"></textarea><br>
            </div>


            <div class="btn">

             
                <button class="Save" type="button" onclick="addOrUpdateUser()" style="background-color:steelblue">Save</button>
               <button class="Cancel" type="button" onclick="cancelUser()">Cancel</button>

            </div>
        </form>
    </div>

</body>
</html>
