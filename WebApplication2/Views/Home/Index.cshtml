@using System.Reflection
@model List<Person>

@{
    ViewBag.Title = "Person List";
}

<h2>Person List</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Class</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.Persons)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Gender</td>
                <td>@person.DateOfBirth.ToShortDateString()</td>
                <td>@person.Age</td>
                <td>@person.SClass</td>
                <td>@person.Address</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = person.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
